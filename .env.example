# Database Configuration
DATABASE_URL=postgresql://yachtlife:yachtlife_dev_password@localhost:5432/yachtlife?sslmode=disable
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=yachtlife
DATABASE_PASSWORD=yachtlife_dev_password
DATABASE_NAME=yachtlife

# Server Configuration
PORT=8080
GIN_MODE=debug
ENVIRONMENT=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# Apple Sign In Configuration
APPLE_TEAM_ID=your-apple-team-id
APPLE_CLIENT_ID=com.yachtlife.app
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key-base64

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Xero Configuration
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://localhost:8080/api/v1/xero/callback
XERO_WEBHOOK_KEY=your-xero-webhook-signing-key

# S3/MinIO Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=yachtlife
S3_SECRET_KEY=yachtlife_minio_password
S3_BUCKET=yachtlife-storage
S3_REGION=us-east-1
S3_USE_SSL=false

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-firebase-server-key
FCM_PROJECT_ID=your-firebase-project-id

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yachtlife.app
EMAIL_FROM_NAME=YachtLife

# SMS Configuration (MessageBird or Twilio)
# Option 1: MessageBird
MESSAGEBIRD_API_KEY=your-messagebird-api-key
SMS_FROM=YachtLife

# Option 2: Twilio (comment out MessageBird if using Twilio)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Session Configuration
SESSION_TIMEOUT=30m
